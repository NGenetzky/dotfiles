// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+k r",
        "command": "workbench.action.openRecent"
    },
    {
        "key": "ctrl+k d",
        "command": "workbench.action.files.revealActiveFileInWindows",
    },
    {
        "key": "ctrl+\\", // Used for kermit
        "command": "-",
    },
    ////////////////////////////////////////////////////////////////////////////
    // ngenetzky.tmux
    //
    {
        "key": "ctrl+a",
        "command": "multiCommand.terminal_tmux_prefix",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+a",
        "command": "multiCommand.terminal_tmux_prefix",
        "when": "explorerViewletFocus"
    },
    {
        "key": "ctrl+k t", // Toggle TerminalMode
        "command": "workbench.action.toggleMaximizedPanel",
    },
    // ngenetzky.tmux
    //
    ////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////
    // ngenetzky.vim
    //
    {
        "key": "ctrl+k v",
        "command": "extension.openCurrentFileInVimTer",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+k v",
        "command": "extension.openSelectedFileInVimTer",
        "when": "explorerViewletFocus"
    },
    // ngenetzky.vim
    //
    ////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////
    // vscode issue
    //
    // https://github.com/microsoft/vscode/issues/39532
    {
        "key": "shift+alt+cmd+down",
        "command": "cursorColumnSelectDown",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+cmd+left",
        "command": "cursorColumnSelectLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+cmd+pagedown",
        "command": "cursorColumnSelectPageDown",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+cmd+pageup",
        "command": "cursorColumnSelectPageUp",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+cmd+right",
        "command": "cursorColumnSelectRight",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+cmd+up",
        "command": "cursorColumnSelectUp",
        "when": "editorTextFocus"
    },
    // vscode issue
    ////////////////////////////////////////////////////////////////////////////
]
